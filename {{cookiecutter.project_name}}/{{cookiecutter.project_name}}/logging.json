{
  "version": 1,
  "disable_existing_loggers": false,
  "formatters": {
    "simple": {
      "format": "%(asctime)s - [%(levelname)s] - %(name)s - %(message)s"
    }
  },

  "handlers": {
    "console": {
      "class": "logging.StreamHandler",
      "level": "DEBUG",
      "formatter": "simple",
      "stream": "ext://sys.stdout"
    },
    "info_file_handler": {
      "class": "logging.handlers.RotatingFileHandler",
      "level": "INFO",
      "formatter": "simple",
      "filename": "logs/{{cookiecutter.project_name}}-info.log",
      "maxBytes": 10485760,
      "backupCount": 10,
      "encoding": "utf8"
    },
    "error_file_handler": {
      "class": "logging.handlers.RotatingFileHandler",
      "level": "ERROR",
      "formatter": "simple",
      "filename": "logs/{{cookiecutter.project_name}}-error.log",
      "maxBytes": 10485760,
      "backupCount": 10,
      "encoding": "utf8"
    }
  },

  "loggers": {
    "{{cookiecutter.project_name}}": {
      "level": "ERROR",
      "handlers": ["console"],
      "propagate": "no"
    }
  },

  "root": {
    "level": "INFO",
    "handlers": ["info_file_handler", "error_file_handler"]
  }
}
